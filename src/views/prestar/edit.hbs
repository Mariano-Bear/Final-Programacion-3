
<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/prestar/edit/{{presta.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre del Solicitante" value="{{presta.nombre}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="email" name="correo" class="form-control" placeholder="E-mail" value="{{presta.correo}}">
                </div>
                 <div class="form-group">
                    <input type="text" name="nombre_libro" class="form-control" placeholder="Autor - Nombre de libro" value="{{presta.nombre_libro}}">
                </div>
                 <div class="form-group">
                    <input type="number" name="cant" class="form-control" placeholder="Libros Prestados" value="{{presta.cant}}">
                </div>
                
                <div class="form-group">
                    <input type="text" name="autor" class="form-control" placeholder="Autor" value="{{presta.autor}}">
                </div>
                <div class="form-group">
                    <input type="text" name="editorial" class="form-control" placeholder="Editorial" value="{{presta.editorial}}">
                </div>
                <div class="form-group">
                    <input type="date" name="fecha" class="form-control" placeholder="Fecha de Entrega" value="{{presta.fecha}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>